{% extends 'secure.html.twig' %}

{% block pageTitle %}
    Loan Detail
{% endblock %}

{% block content %}
    <div class="margin-bottom pull-right">
        <ul class="buttons">
            <li>
                <a href="{{ path('memberloan_edit', { 'id': memberLoan.id }) }}" class="btn btn-warning btn-sm">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Applicant Name</th>
                <td>{{ memberLoan.profile.user.firstName }} {{ memberLoan.profile.user.lastName }} {{ memberLoan.profile.user.otherNames }}</td>
            </tr>
            <tr>
                <th>Date Issued</th>
                <td>{% if memberLoan.dateIssued %}{{ memberLoan.dateIssued|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ memberLoan.amount }}</td>
            </tr>
            <tr>
                <th>Interest Rate</th>
                <td>{{ memberLoan.interestRate }}%</td>
            </tr>
            <tr>
                <th>Issued By</th>
                <td>{{ memberLoan.issuedBy }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
