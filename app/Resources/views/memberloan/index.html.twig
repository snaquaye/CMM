{% extends 'base.html.twig' %}

{% block body %}
    <h1>MemberLoan list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Member</th>
                <th>Dateissued</th>
                <th>Amount</th>
                <th>Interestrate</th>
                <th>Issuedby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for memberLoan in memberLoans %}
            <tr>
                <td><a href="{{ path('memberloan_show', { 'id': memberLoan.id }) }}">{{ memberLoan.id }}</a></td>
                <td>{{ memberLoan.member }}</td>
                <td>{% if memberLoan.dateIssued %}{{ memberLoan.dateIssued|date('Y-m-d') }}{% endif %}</td>
                <td>{{ memberLoan.amount }}</td>
                <td>{{ memberLoan.interestRate }}</td>
                <td>{{ memberLoan.issuedBy }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('memberloan_show', { 'id': memberLoan.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('memberloan_edit', { 'id': memberLoan.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('memberloan_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
