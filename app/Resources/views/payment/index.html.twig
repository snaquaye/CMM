{% extends 'base.html.twig' %}

{% block body %}
    <h1>Payment list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Member</th>
                <th>Dateofpayment</th>
                <th>Paymentmonth</th>
                <th>Amountpaid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td><a href="{{ path('payment_show', { 'id': payment.id }) }}">{{ payment.id }}</a></td>
                <td>{{ payment.member }}</td>
                <td>{% if payment.dateOfPayment %}{{ payment.dateOfPayment|date('Y-m-d') }}{% endif %}</td>
                <td>{{ payment.paymentMonth }}</td>
                <td>{{ payment.amountPaid }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('payment_show', { 'id': payment.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('payment_edit', { 'id': payment.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('payment_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
